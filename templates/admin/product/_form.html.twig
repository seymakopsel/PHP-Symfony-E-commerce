<form  class="modal-form" method="post">
    <div class="form-group row">
        <label  class="col-sm-3 col-form-label">Kategorisi</label>
        <div class="col-sm-5">
            <select name="product[category_id]" class="form control">


                {% if (catname) %}
                <option value="{{ product.categoryid }}"> {{ catname[0].title }} </option>
                {% endif %}


                {% for cat in catlist %}
                    <option value="{{ cat.id }}"> {{ cat.title }} </option>
                {% endfor %}


            </select>
        </div>
    </div>

    <div class="form-group row">
        <label  class="col-sm-3 col-form-label">Başlık</label>
        <div class="col-sm-5">
            <input type="text" name="product[title]" value="{{ product.title }}" class="form-control" placeholder="Başlık">
        </div>
    </div>
    <div class="form-group row">
        <label  class="col-sm-3 col-form-label">Anahtar Kelime</label>
        <div class="col-sm-5">
            <input type="text" name="product[keywords]" value="{{ product.keywords}}" class="form-control"  placeholder="Anahtar kelime">
        </div>
    </div>

    <div class="form-group row">
        <label  class="col-sm-3 col-form-label">Açıklama</label>
        <div class="col-sm-5">
            <input type="text" name="product[description]" value="{{ product.description}}" class="form-control"  placeholder="Açıklama">
        </div>
    </div>

    <div class="form-group row">
        <label  class="col-sm-3 col-form-label">Alış Fiyatı</label>
        <div class="col-sm-5">
            <input type="text" name="product[price]" value="{{ product.price}}" class="form-control"  placeholder="Açıklama">
        </div>
    </div>

    <div class="form-group row">
        <label  class="col-sm-3 col-form-label">Satış Fiyatı</label>
        <div class="col-sm-5">
            <input type="text" name="product[sales]" value="{{ product.sales}}" class="form-control"  placeholder="Açıklama">
        </div>
    </div>

    <div class="form-group row">
        <label  class="col-sm-3 col-form-label">Miktar</label>
        <div class="col-sm-5">
            <input type="text" name="product[amount]" value="{{ product.amount}}" class="form-control"  placeholder="Açıklama">
        </div>
    </div>

    <div class="form-group row">
        <label  class="col-sm-3 col-form-label">Aktif Durumu</label>
        <div class="col-sm-5">
            <select name="product[status]" class="form control">
                <option>{{ product.status }}</option>
                <option> True </option>
                <option selected> False</option>

            </select>
        </div>
    </div>


    <div class="form-group row">
        <label  class="col-sm-3 col-form-label">Detay</label>
        <div class="col-sm-5">
            <textarea id="detail" name="product[detail]" rows="10" cols="80"> {{ product.detail}} </textarea>

        </div>
    </div>

    <button type="submit" class="btn btn-default mr-2">İPTAL</button>
    <button type="submit" class="btn btn-success mr-2">KAYDET</button>

</form>

<script>
    ClassicEditor
        .create( document.querySelector( '#detail' ) )
        .catch( error => {
            console.error( error );
        } );
</script>