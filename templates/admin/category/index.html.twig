{% extends 'adminbase.html.twig' %}

{% block title %} Kategori Listesi {% endblock %}

{% block content  %}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="card">
            <div class="card-body">
                <h4> Kategori Listesi


                    <small> <a href=" {{ path('admin_category_new') }}" class="btn btn-info btn-fw"> Kategori Ekleme </a> </small>
                </h4>

                        <div class="table-responsive">
                            <table class="table">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Parentid</th>
                            <th>Title</th>
                            <th>Keywords</th>
                            <th>Description</th>
                            <th>Status</th>
                            <th>Göster</th>
                            <th>Düzenle</th>
                            <th>Sil</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for category in categories %}
                            <tr>
                                <td>{{ category.id }}</td>
                                <td>{{ category.parentid }}</td>
                                <td>{{ category.title }}</td>
                                <td>{{ category.keywords }}</td>
                                <td>{{ category.description }}</td>
                                <td>{{ category.status }}</td>
                                <td>
                                    <a href="{{ path('admin_category_show', {'id': category.id}) }}" class ="btn btn-block btn-info btn-xs">Göster </a>
                                </td> <td>
                                    <a href="{{ path('admin_category_edit', {'id': category.id,'pid': category.parentid}) }}" class ="btn btn-block btn-info btn-xs">Düzenle </a>
                                </td>
                                <td>  <a href="{{ path('admin_category_delete', {'id': category.id,'pid': category.parentid}) }}"  class ="btn btn-block btn-info btn-xs">Sil</a> </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>


                </div>
            </div>
        </div>
    </div>

    {% endblock %}
