{% extends 'adminbase.html.twig' %}

{% block title %} Kategori Detayı {% endblock %}

{% block content  %}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="card">
            <div class="card-body">
                <h4> Kategori Detayı


                    <small> <a href=" {{ path('admin_category_new') }}" class="btn btn-info btn-fw"> Kategori Ekleme </a> </small>
                </h4>

                <div class="table-responsive">
                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ category.id }}</td>
                        </tr>
                        <tr>
                            <th>Parentid</th>
                            <td>{{ category.parentid }}</td>
                        </tr>
                        <tr>
                            <th>Title</th>
                            <td>{{ category.title }}</td>
                        </tr>
                        <tr>
                            <th>Keywords</th>
                            <td>{{ category.keywords }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ category.description }}</td>
                        </tr>
                        <tr>
                            <th>Status</th>
                            <td>{{ category.status }}</td>
                        </tr>
                        </tbody>
                    </table>

                    <a href="{{ path('admin_category_index') }}">Listeye geri dön.</a>

                    <a href="{{ path('admin_category_edit', {'id': category.id,'pid': category.parentid}) }}">Düzenle</a>

                    {{ include('admin/category/_delete_form.html.twig') }}

                </div>
            </div>
        </div>
    </div>

    {% endblock %}
